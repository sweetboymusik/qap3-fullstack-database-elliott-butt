<head>
  <link href="../public/css/styles.css" rel="stylesheet" type="text/css" />
</head>

<body>
  <%- include('./partials/nav.ejs') %>

  <div class="titles">
    <h1>BROWSE</h1>
    <hr />
    <p>Browse the database by category.</p>
  </div>

  <div class="card-container">
    <a class="category-card" href="/browse/all"><h3>All</h3></a>

    <% if (categories.length > 0) { %> <% categories.forEach(category => { %>

    <a class="category-card" href="/browse/<%= category.name.toLowerCase() %>">
      <h3><%= category.name %></h3>
    </a>

    <% }) %> <% } else { %>
    <p>No categories found.</p>
    <% } %>
  </div>
</body>
